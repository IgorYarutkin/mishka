extends /blocks/layout-default/layout-default
include /blocks/radio/radio.jade
include /blocks/checkbox/checkbox.jade
include /blocks/button/button.jade

block head
	- var pageTitle = 'Examples';

block content
	section
		h2 Примеры радио-кнопок
		+radio({"name": "accessory", "checked": true, "label": "Аксессуар для интерьера", "value": "accessory"})
		+radio({"name": "accessory", "checked": false, "label": "Детская игрушка", "value": "toy"})
	section
		h2 Примеры чекбоксов
		+checkbox({"name": "color", "label": "Белый", "value": "white", "checked": true})
		+checkbox({"name": "color", "label": "Серый", "value": "grey", "checked": false})
	section
		h2 Пример кнопки
		+button({"label": "Отправить заказ"})
		+button({"label": "Перейти в корзину", "href": "#"})
		+button({"label": "Нравится", "type": "button"})
	section(style="display:flex;flex-wrap:wrap;align-items:flex-start;")
		h2(style="width:100%;") Пример взаимного расположения чекбокса и кнопки
		+radio({"name": "accessory", "checked": true, "label": "Аксессуар для Вашего интерьера ", "value": "accessory"})(style="width:50%;")
		+button({"label": "Отправить заказ очень-очень срочно"})(style="width:50%;")
